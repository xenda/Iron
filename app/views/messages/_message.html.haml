%li.message{:id => "message_#{message.id}"}
  %h4= message.title
  .content= simple_format message.content
  .meta_data
    .avatar
    .name= message.try(:user).try(:name)
    .votes
      .vote_count
        = message.votes_count
        votos
      .submit
        = simple_form_for Vote.new(:message_id => message.id), :remote => true do |f|
          = f.input :message_id, :as => :hidden
          = f.button :submit, "Votar"